{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "test/e2e/src",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es5",
    "module": "amd",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["es2015", "dom"]
  },
  "filesGlob": [
    "./src/**/*.e2e.ts",
    "./test/**/*.e2e.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "typings",
    "custom_typings"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
